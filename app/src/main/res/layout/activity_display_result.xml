<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".DisplayResultActivity"
    android:padding="16dp"

    android:background="@drawable/rounded_corners_background">

    <TextView
        android:id="@+id/textViewPredictedDiseaseLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Predicted Disease:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewPredictedDiseaseValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textViewPredictedDiseaseLabel"
        android:layout_marginBottom="16dp"/>

    <TextView
        android:id="@+id/textViewSelectedSymptomsLabel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Selected Symptoms:"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textViewPredictedDiseaseValue"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"/>

    <TextView
        android:id="@+id/textViewSelectedSymptomsValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/textViewSelectedSymptomsLabel"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/medic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Show Medication"
        android:gravity="center"
        android:textColor="#FFFFFF"
        android:background="@drawable/button_background"
        android:layout_below="@id/textViewSelectedSymptomsValue"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/medications_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#FFFFFF"
        android:layout_below="@id/medic"
        android:layout_marginTop="16dp"/>

</RelativeLayout>
